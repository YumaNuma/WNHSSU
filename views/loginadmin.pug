doctype html
head
  link(rel='stylesheet' href='/css/w3.css')
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  title Login
form#app.w3-container.w3-display-middle(method='post', style="width:50%;")
  fieldset
    legend.w3-xxlarge Login
    // Button
    label.w3-large(for='pass' maxlength='4') Crew Chief Passcode
    input#pass.w3-input.w3-border(name='pass' type='text' placeholder='4-digit passcode' maxlength='4' required='')
    .form-group
      label.col-md-4.control-label(for='submit')
      button#submit.w3-btn.w3-green(type='submit' name='yes') Submit
script(src="/javascripts/bundle.js")
include includes/footer.pug