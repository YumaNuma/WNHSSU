#id01.modal
  form.modal-content.animate(action='/login/user' method="POST" style="width: 50%;")
    legend.w3-display-topmiddle.w3-xxlarge LOGIN
    .imgcontainer
      span.close.w3-hover-red(onclick="document.getElementById('id01').style.display='none'" title='Close Modal') &times;
      br
    .container
      label(for='id')
        b Username or Phone Number
      input(type='text' placeholder='Enter Username or Phone Number' name='id' required='')
      label(for='password')
        b Password
      input(type='password' placeholder='Enter Password' name='password' required='')
      button.w3-black(type='submit') Login
#id02.modal
  form.modal-content.animate(action='/register' method="POST" style="width: 50%;")
    legend.w3-display-topmiddle.w3-xxlarge Register
    .imgcontainer
      span.close.w3-hover-red(onclick="document.getElementById('id02').style.display='none'" title='Close Modal') &times;
      br
    .container
      label(for='username')
        b Username
      input(type='text' placeholder='Enter Username or Phone Number' name='username' required='')
      label(for='fullname')
        b Full Name
      input(type='text' placeholder='Enter Full Name' name='fullname' required='')
      label(for='pnumber')
        b Phone Number
      input(type='text' placeholder='Enter Phone Number' name='pnumber' required='')
      label(for='password')
        b Password
      input(type='password' placeholder='Enter Password' name='password' required='')
      label(for='classpass')
        b Class Code
      input(type='password' placeholder='Enter Class Code' name='classpass' required='')
      .w3-mobile.g-recaptcha(data-sitekey='6LebYEsUAAAAACRDus6tf9efYXkbJ220VLw_G5wU')
      button.w3-black(type='submit') Register
script.
  // Get the modal
  var modal = document.getElementById('id01');
  // When the user clicks anywhere outside of the modal, close it
  window.onclick = function(event) {
  if (event.target == modal) {
  modal.style.display = "none";
  }
  }
  // Get the modal
  var modal = document.getElementById('id02');
  // When the user clicks anywhere outside of the modal, close it
  window.onclick = function(event) {
  if (event.target == modal) {
  modal.style.display = "none";
  }
  }

