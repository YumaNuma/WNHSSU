        button.w3-black.w3-hover-grey(onclick="document.getElementById('id01').style.display='block'" style='width:auto;') Login
        button.w3-black.w3-hover-grey(onclick="document.getElementById('id02').style.display='block'" style='width:auto;') Register
      a(href='https://github.com/zaida04/WNSU')
        button.w3-black.w3-hover-grey(onclick="document.style.display='block'" style='width:auto;') Github
      a(href='/admin/panel')
        button.w3-black.w3-hover-grey(onclick="document.style.display='block'" style='width:auto;') Admin Panel
      a(href='/')
        button.w3-black.w3-hover-grey(onclick="document.style.display='block'" style='width:auto;') Home Page
      if(username) 
        button.w3-text-red.w3-black.w3-hover-grey(style='width:auto;') Hello #{username}!
